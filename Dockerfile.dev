# Development Dockerfile for local development
ARG RUBY_VERSION=3.4.7
FROM docker.io/library/ruby:$RUBY_VERSION-slim

# Install system dependencies in smaller batches to reduce memory usage
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    build-essential \
    git \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/* /var/cache/apt/archives/*

RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    curl \
    libvips \
    libyaml-dev \
    && rm -rf /var/lib/apt/lists/* /var/cache/apt/archives/*

RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    nodejs \
    npm \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/* /var/cache/apt/archives/*

# Set working directory
WORKDIR /rails

# Install bundler
RUN gem install bundler

# Add Rails bin directory to PATH
ENV PATH="/rails/bin:${PATH}"

# Copy dependency files
COPY Gemfile Gemfile.lock ./

# Install gems
RUN bundle install

# Copy the rest of the application
COPY . .

# Set entrypoint to handle bundle install and server.pid cleanup
ENTRYPOINT ["/rails/bin/docker-entrypoint"]

# Expose port 3000
EXPOSE 3000

# Start the Rails server
CMD ["bundle", "exec", "rails", "server", "-b", "0.0.0.0"]
