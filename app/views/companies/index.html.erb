<div id="companies" class="container-fluid px-4 py-4 companies-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="companies_page">
      <h1 class="mb-0">Company Management - Companies</h1>
      <div class="d-flex justify-content-end">
        <% if policy(Company.new).create? %>
          <%= link_to new_company_path, class: "add-button btn btn-primary btn-sm", **modal_link_data(size: 'modal-lg') do %>
            <i class="bi bi-plus-circle-fill text-white me-1"></i>New Company
          <% end %>
        <% end %>
      </div>
      <div class="card-body">
        <%= search_form_for @q, url: companies_path, html: { id: 'company-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
          <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
              <thead class="header-row">
                <tr class="header-row">
                  <th></th>
                  <th class="text-center">
                    <%= sort_link(@q, :name, 'Company Name') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :code, 'Code') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :status, 'Status') %>
                  </th>
                  <th class="text-center">
                    Users
                  </th>
                  <th class="text-center">
                    Projects
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :created_at, 'Created At') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :updated_at, 'Updated At') %>
                  </th>
                </tr>
                <tr>
                  <th class="text-center">
                    <div class="d-flex gap-1 justify-content-center">
                      <%= link_to 'RESET', companies_path, class: 'btn reset-btn', style: 'font-weight: normal; width: 100px;' %>
                    </div>
                  </th>
                  <th>
                    <%= f.search_field :name_cont, class: 'form-control form-control-sm', placeholder: 'Search Name..', data: { action: "input->search-form#autoSubmit" } %>
                  </th>
                  <th>
                    <%= f.search_field :code_cont, class: 'form-control form-control-sm', placeholder: 'Search Code..', data: { action: "input->search-form#autoSubmit" } %>
                  </th>
                  <th>
                    <%= f.select :status_eq,
                      options_for_select([['Active', 'active'], ['Inactive', 'inactive']], f.object.status_eq),
                      { include_blank: 'All Statues..' },
                      { class: 'form-select form-select-sm',
                      data: { action: "input->search-form#instantSubmit" } } %>
                  </th>
                  <th></th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody id="companies-table-body">
                <% if @companies.any? %>
                  <%= render partial: 'company_row', collection: @companies, as: :company %>
                <% else %>
                  <tr>
                    <td colspan="8" class="text-center text-muted py-4">
                      No companies found.
                      <% if policy(Company.new).create? %>
                        <%= link_to 'Add a new company', new_company_path, class: 'text-decoration-none' %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="text-muted small">
            Showing <%= @pagy.from %>-<%= @pagy.to %> of <%= @pagy.count %> companies
          </div>
          <div>
            <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'modal' %>
</div>
