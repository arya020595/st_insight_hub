<div id="url-manager"></div>
<div id="projects" class="container-fluid px-4 py-4 projects-list" data-controller="multi-sort">
  <div class="card shadow-sm">
    <div class="projects_page">
      <h1>BI Dashboard Management - Projects</h1>
      <div class="d-flex justify-content-end">
        <% if policy(Project.new).new? %>
          <%= link_to new_project_path, class: "add-button btn btn-primary btn-sm", **modal_link_data(size: 'modal-lg') do %>
            <i class="bi bi-plus-circle-fill text-white me-1"></i>Add Project
          <% end %>
        <% end %>
      </div>
      <div class="card-body">
        <%= search_form_for @q, url: projects_path, html: { id: 'project-search-form', data: { controller: "search-form", action: "submit->search-form#resetPage" } } do |f| %>
          <div class="table-responsive">
            <table class="table table-hover table-sm mb-0">
              <thead class="header-row">
                <tr class="header-row">
                  <th></th>
                  <th class="text-center">
                    <%= sort_link(@q, :id, 'ID') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :name, 'Project Name') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :company_id, 'Company') %>
                  </th>
                  <th class="text-center">
                    Dashboards
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :status, 'Status') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :created_at, 'Created At') %>
                  </th>
                  <th class="text-center">
                    <%= sort_link(@q, :updated_at, 'Updated At') %>
                  </th>
                </tr>
                <tr>
                  <th class="text-center">
                    <div class="d-flex gap-1 justify-content-center">
                      <%= link_to 'Reset', projects_path, class: 'btn reset-btn', style: 'font-weight: normal; width: 100px;' %>
                    </div>
                  </th>
                  <th class="text-center">
                    <%= f.number_field :id_eq, class: 'form-control form-control-sm', placeholder: 'ID', min: 1, data: { action: "input->search-form#autoSubmit" } %>
                  </th>
                  <th>
                    <%= f.search_field :name_cont, class: 'form-control form-control-sm', placeholder: 'Search Name..', data: { action: "input->search-form#autoSubmit" } %>
                  </th>
                  <th>
                    <% if current_user.superadmin? %>
                      <%= f.select :company_id_eq,
                        options_from_collection_for_select(Company.kept, :id, :name, f.object.company_id_eq),
                        { include_blank: 'All Companies..' },
                        { class: 'form-select form-select-sm',
                        data: { action: "input->search-form#instantSubmit" } } %>
                    <% end %>
                  </th>
                  <th></th>
                  <th>
                    <%= f.select :status_eq,
                      options_for_select([['Active', 'active'], ['Inactive', 'inactive']], f.object.status_eq),
                      { include_blank: 'All Status..' },
                      { class: 'form-select form-select-sm',
                      data: { action: "input->search-form#instantSubmit" } } %>
                  </th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody id="projects-table-body">
                <% if @projects.any? %>
                  <%= render partial: 'project_row', collection: @projects, as: :project %>
                <% else %>
                  <tr>
                    <td colspan="8" class="text-center text-muted py-4">
                      No projects found.
                      <% if policy(Project.new).new? %>
                        <%= link_to 'Add a new project', new_project_path, class: 'text-decoration-none' %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div class="text-muted small">
            Showing <%= @pagy.from %>-<%= @pagy.to %> of <%= @pagy.count %> projects
          </div>
          <div>
            <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'modal' %>
</div>
