<div class="container-fluid">
  <div class="row mb-4">
    <div class="col">
      <h1 class="h3">
        <i class="bi bi-speedometer2 me-2"></i>
        Dashboard
      </h1>
      <p class="text-muted">Welcome back, <%= current_user.name || current_user.email %>!</p>
    </div>
  </div>
  <!-- Stats Cards -->
  <div class="row g-4 mb-4">
    <div class="col-md-6 col-lg-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0 bg-primary bg-opacity-10 rounded-3 p-3">
              <i class="bi bi-kanban-fill text-primary fs-4"></i>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="text-muted mb-1">Projects</h6>
              <h3 class="mb-0"><%= @projects_count %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0 bg-success bg-opacity-10 rounded-3 p-3">
              <i class="bi bi-bar-chart-line-fill text-success fs-4"></i>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="text-muted mb-1">Dashboards</h6>
              <h3 class="mb-0"><%= @dashboards_count %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0 bg-info bg-opacity-10 rounded-3 p-3">
              <i class="bi bi-people-fill text-info fs-4"></i>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="text-muted mb-1">Users</h6>
              <h3 class="mb-0"><%= @users_count %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0 bg-warning bg-opacity-10 rounded-3 p-3">
              <i class="bi bi-journal-text text-warning fs-4"></i>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="text-muted mb-1">Audit Logs</h6>
              <h3 class="mb-0"><%= @audit_logs_count %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Recent Activity -->
  <div class="row">
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
          <h5 class="card-title mb-0">
            <i class="bi bi-activity me-2"></i>
            Recent Activity
          </h5>
        </div>
        <div class="card-body">
          <% if @recent_logs.any? %>
            <div class="table-responsive">
              <table class="table table-hover align-middle">
                <thead>
                  <tr>
                    <th>User</th>
                    <th>Action</th>
                    <th>Module</th>
                    <th>Time</th>
                  </tr>
                </thead>
                <tbody>
                  <% @recent_logs.each do |log| %>
                    <tr>
                      <td><%= log.user_name || 'System' %></td>
                      <td>
                        <span class="badge bg-<%= action_badge_class(log.action) %>">
                          <%= log.action.upcase %>
                        </span>
                      </td>
                      <td><%= log.module_name.titleize %></td>
                      <td class="text-muted"><%= time_ago_in_words(log.created_at) %> ago</td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted text-center my-4">No recent activity</p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white">
          <h5 class="card-title mb-0">
            <i class="bi bi-clock-history me-2"></i>
            Quick Links
          </h5>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush">
            <% if can_view_menu?('bi_dashboards.index') %>
              <%= link_to bi_dashboards_path, class: "list-group-item list-group-item-action d-flex align-items-center" do %>
                <i class="bi bi-bar-chart-line-fill me-3 text-primary"></i>
                <span>View BI Dashboards</span>
              <% end %>
            <% end %>
            <% if can_view_menu?('bi_dashboards.projects.index') %>
              <%= link_to projects_path, class: "list-group-item list-group-item-action d-flex align-items-center" do %>
                <i class="bi bi-kanban-fill me-3 text-success"></i>
                <span>Manage Projects</span>
              <% end %>
            <% end %>
            <% if can_view_menu?('user_management.users.index') %>
              <%= link_to user_management_users_path, class: "list-group-item list-group-item-action d-flex align-items-center" do %>
                <i class="bi bi-people-fill me-3 text-info"></i>
                <span>Manage Users</span>
              <% end %>
            <% end %>
            <% if can_view_menu?('audit_logs.index') %>
              <%= link_to audit_logs_path, class: "list-group-item list-group-item-action d-flex align-items-center" do %>
                <i class="bi bi-journal-text me-3 text-warning"></i>
                <span>View Audit Logs</span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
