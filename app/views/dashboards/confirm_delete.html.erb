<%= turbo_frame_tag "modal" do %>
  <div class="modal-header border-0">
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div class="modal-body text-center py-4">
    <i class="bi bi-exclamation-circle text-danger" style="font-size: 4rem;"></i>
    <h5 class="mt-3 mb-3">Delete Dashboard</h5>
    <p id="deleteConfirmMessage">
      Are you sure you want to delete dashboard <strong>"<%= @dashboard.name %>"</strong>?
      <br>
      This dashboard will be permanently removed from project: <strong><%= @project.name %></strong>.
    </p>
  </div>
  <div class="modal-footer border-0 justify-content-center">
    <%= link_to project_path(@project), class: "btn btn-secondary" do %>
      <i class="bi bi-arrow-left me-1"></i> Cancel
    <% end %>
    <%= button_to "Yes! Delete", project_dashboard_path(@project, @dashboard), method: :delete, class: "btn btn-danger ms-2", form: { data: { turbo_frame: "modal" } } %>
  </div>
<% end %>
